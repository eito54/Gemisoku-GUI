{
  "name": "mk8dx-bot-gui",
  "version": "1.0.0",
  "description": "MK8DX Bot GUI Controller",
  "author": "MK8DX Bot Team",
  "main": "gui/main.js",
  "homepage": "https://github.com/yourusername/mk8dx-bot",
  "scripts": {
    "gui:dev": "electron gui/main.js",
    "gui:build": "npm run build:next && electron-builder",
    "gui:pack": "npm run build:next && electron-builder --dir",
    "gui:dist": "npm run build:next && electron-builder --publish=never",
    "build:next": "next build",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.mk8dx.bot.controller",
    "productName": "MK8DX Bot Controller",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "copyright": "Copyright Â© 2025 MK8DX Bot Team",
    "directories": {
      "output": "dist-gui",
      "buildResources": "build"
    },
    "files": [
      "gui/**/*",
      ".next/**/*",
      "src/**/*",
      "public/**/*",
      "package.json",
      "next.config.mjs",
      "tailwind.config.ts",
      "postcss.config.mjs",
      "tsconfig.json",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!**/*.md",
      "!**/test/**",
      "!**/*.test.*",
      "!**/*.spec.*"
    ],
    "extraFiles": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/logo.png",
      "publisherName": "MK8DX Bot Team",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MK8DX Bot Controller",
      "installerIcon": "assets/logo.png",
      "uninstallerIcon": "assets/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/logo.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo.png",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "node-fetch": "^3.3.2"
  }
}